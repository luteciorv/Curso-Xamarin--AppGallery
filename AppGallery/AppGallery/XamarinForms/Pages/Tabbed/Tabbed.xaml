<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Pages.Tabbed.Tabbed"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             BarBackgroundColor="Black"
             SelectedTabColor="Red"
             UnselectedTabColor="DarkGray"             
             android:TabbedPage.ToolbarPlacement="Bottom">
    <!--Pages can be added as references or inline-->
    <!--Página 1-->
    <ContentPage Title="Tab 1">
        <Label Text="Página 01" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
    </ContentPage>

    <!--Página 2-->
    <ContentPage Title="Tab 2" IconImageSource="splash_screen.png">
        <Label Text="Página 02" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
    </ContentPage>

    <!--Página 3-->
    <ContentPage Title="Tab 3">
        <Label Text="Página 03" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
    </ContentPage>

</TabbedPage>