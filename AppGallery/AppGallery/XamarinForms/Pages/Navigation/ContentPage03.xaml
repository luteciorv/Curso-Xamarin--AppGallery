<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Pages.Navigation.ContentPage03"
             Title="Conteúdo 03"
             NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Inserir página na pilha" Clicked="InsertPageOnStack"/>
            <Button Text="Remover página da pilha" Clicked="RemovePageFromStack"/>

            <Label Text="Página de conteúdo 03"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="PopAsync - Página 02" Clicked="BackToPreviousPage" />
            <Button Text="PopToRoot - Página 01" Clicked="BackToBegin"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>