<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Pages.Side_Menu.SideMenu"
             xmlns:local="clr-namespace:AppGallery.XamarinForms.Pages.Side_Menu">

    <!--Menu-->
    <MasterDetailPage.Master>
        <ContentPage Title="Menu Lateral">
            <StackLayout>
                <Button Text="Página 01" 
                        Clicked="OpenPage01" 
                        BackgroundColor="Transparent" 
                        HorizontalOptions="Start"/>
                
                <Button Text="Página 02" 
                        Clicked="OpenPage02" 
                        BackgroundColor="Transparent"
                        HorizontalOptions="Start"/>
                
                <Button Text="Página 03" 
                        Clicked="OpenPage03" 
                        BackgroundColor="Transparent"
                        HorizontalOptions="Start"/>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    
    <!--Conteúdo-->
    <MasterDetailPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:Content01/>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>